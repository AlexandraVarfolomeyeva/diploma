@model Order;

<div class="row basket-div center-block" id="partialViewDiv">
    <div class="col-md-9 active-cyan-3 search-div">

        <div class="row">
            <input class="form-control" autocomplete="off" type="text" id="search" placeholder="Search" aria-label="Search">
        </div>
        <div class="row">
            <div>
                <select class="custom-select" id="Order">
                    <option value="new_first">Сначала новые</option>
                    <option value="name_desc">По названию (По убыванию)</option>
                    <option value="name">По названию (По возрастанию)</option>
                    <option value="cost_desc">По цене (По убыванию)</option>
                    <option value="cost">По цене (По возрастанию)</option>
                    <option value="Date">По дате выпуска (По возрастанию)</option>
                    <option value="date_desc">По дате выпуска (По убыванию)</option>
                </select>
            </div>
            <div>
                <button class="btn btn-info" onclick="Search();">Search</button>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        @if (@Model != null)
        {
            <div class="row">
                <div class="col-md-4">
                    <a class="h5" asp-area="" asp-controller="Personal" asp-action="Basket">
                        @*   <img src="~/images/corzina.png" alt="Корзина" height="80" wight="80">*@
                        <img src="~/images/unnamed.png" alt="Корзина" height="104" wight="80">
                    </a>
                </div>
                <div class="col-md-8 text-center">
                    <a class="h5" asp-area="" asp-controller="Personal" asp-action="Basket">Корзина</a>
                    <p>Количество: @Model.Amount</p>
                    <p>Сумма: @Model.SumOrder</p>
                </div>
            </div>
        }
        else
        {
            <div class="rounded border align-middle basket-login">
                <p class="align-middle text-center">Пожалуйста, авторизируйтесь, чтобы заказывать книги.</p>
            </div>
        }
    </div>
</div>
