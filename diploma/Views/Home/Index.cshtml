<div class="row">
    @foreach (BookView s in ViewBag.Books)
    {
        <div class="col-md-3 col-sm bg-white border-bottom shadow-sm">
            <img class="center-block img-top-bottom-space" src="@s.image" width="150" height="215" alt="@s.Title">
            <h5 >
                @s.Title
            </h5>

            <h6>
                @foreach (string c in s.Authors)
                {
                    <a>
                        @c;
                    </a>
                }
            </h6>
            <h6>
                @foreach (string c in s.Genres)
                {
                    <a>
                        @c;
                    </a>
                }
            </h6>
            <h5>
                Цена:  @s.Cost
            </h5>
            @if (ViewBag.Username == "admin")
            {
                <button onclick="editBook(@s.Id);" class="btn btn-dark"> Редактировать </button>
                <button onclick="deleteBook(@s.Id);" class="btn btn-dark"> Удалить </button>
            } else if (ViewBag.Username != "Войти")
            {
                <button onclick="add(@s.Id,@s.Cost,@ViewBag.CurrentOrder);" class="btn btn-dark"> Купить </button> <br />
            }
              </div>
    }
</div>