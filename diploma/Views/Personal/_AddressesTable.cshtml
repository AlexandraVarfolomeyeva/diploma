@model IEnumerable<AddressView>;
@using System.Globalization;

<table class="table table-basket">
    <thead class="thead-light">
        <tr>
            <th scope="col">Адрес</th>
            <th scope="col">Цена доставки</th>
            <th scope="col">Время доставки</th> 
        </tr>
    </thead>
    <tbody id="data">
        @foreach (AddressView i in Model)
        {
            string classname = "row-table-address";
            if (Model.First().Id == i.Id) { classname += " " + "active"; }
            <tr id="@i.Id" class=@classname onclick="ChooseAddress(@i.Id);">
                <td>
                    @i.Address, г. @i.City
                  
                </td>
                <td>@i.DeliverySum руб.</td>
                <td>
                    <p>
                        @{string date = DateTime.Now.AddDays(i.DeliveryTime).ToString("D", CultureInfo.CreateSpecificCulture("ru-RU"));}
                        @date  (@i.DeliveryTime дн.)
                    </p>
                </td>
            </tr>

        }
    </tbody>
</table>